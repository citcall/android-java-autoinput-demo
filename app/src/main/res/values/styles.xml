<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="EditTextAppearance">
        <item name="android:textSize">@dimen/body_text_size</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="ButtonPrimary">
        <item name="android:background">@drawable/btn_primary</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/body_text_size</item>
    </style>

    <style name="TextAppearanceRegularDisplay">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/display_text_size</item>
    </style>


</resources>
